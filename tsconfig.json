{
    "compilerOptions": {
        "strict": true,
        "allowJs": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": false,
        "esModuleInterop": true,
        "incremental": true,
        "target": "es6",
        "module": "CommonJS",
        "jsx": "react",
        "baseUrl": ".",
        "moduleResolution": "node",
        "paths": {
            "@/*": ["src/*"]
        },
        "outDir": "dist",
        "sourceMap": true
    },
    "lib": ["es2015"],
    "include": ["**/*.ts", "**/*.tsx", "@types/worker-configuration.d.ts"],
    "exclude": ["node_modules", ".next"]
}
