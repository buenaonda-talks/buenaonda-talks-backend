{
    "name": "buenaonda-talks-backend",
    "main": "./dist/src/index.js",
    "version": "0.0.1",
    "scripts": {
        "dev": "nodemon --watch \"src/**\" --ext \"ts,tsx,json\" --ignore \"src/**/*.spec.ts\" --exec \"ts-node -r tsconfig-paths/register src/index.ts\"",
        "build": "tsc && tsc-alias -p tsconfig.json && mkdir -p dist/src/views && cp ./src/views/*.ejs ./dist/src/views/",
        "start": "node dist/src/index.js",
        "db:gen": "drizzle-kit generate:pg && prettier ./drizzle --write",
        "db:gen:drop": "drizzle-kit drop",
        "db:gen:custom": "drizzle-kit generate:pg --custom",
        "db:check": "drizzle-kit check:pg",
        "db:up": "drizzle-kit up:pg",
        "db:studio": "drizzle-kit studio --verbose",
        "db:migrate": "tsx migrate.ts",
        "db:model": "tsx ./src/db/dbml.ts",
        "db:dump-old": "tsx dumper db.sqlite3 dump.sql",
        "lint": "eslint \"./src/**/*.{ts,tsx}\" --cache",
        "lint:ci": "npm run lint -- --max-warnings 0",
        "lint:fix": "npm run lint -- --fix",
        "format": "prettier --cache \"{src,emails}/**/*.{ts,tsx}\"",
        "format:ci": "npm run format -- --check",
        "format:fix": "npm run format -- --write",
        "lint-format:fix": "yarn format:fix && yarn lint:fix && tsc",
        "email:build": "email build --dir emails",
        "email:dev": "email dev --port 8788 --dir emails",
        "email:export": "email export --port 8788 --dir emails"
    },
    "dependencies": {
        "@bull-board/express": "^5.14.0",
        "@clerk/backend": "^0.38.0",
        "@envelop/immediate-introspection": "^3.0.0",
        "@envelop/on-resolve": "^4.1.0",
        "@envelop/opentelemetry": "^6.2.1",
        "@graphql-authz/core": "^1.3.1",
        "@graphql-authz/envelop-plugin": "^1.0.5",
        "@libsql/client": "^0.4.3",
        "@pothos/core": "^3.41.0",
        "@pothos/plugin-authz": "^3.5.8",
        "@pothos/plugin-relay": "^3.46.0",
        "@react-email/components": "0.0.14",
        "bull": "^4.12.2",
        "connect-ensure-login": "^0.1.1",
        "dataloader": "^2.2.2",
        "date-fns": "^3.3.1",
        "dayjs": "^1.11.10",
        "dotenv": "^16.4.1",
        "drizzle-orm": "^0.29.3",
        "drizzle-zod": "^0.5.1",
        "express": "^4.18.2",
        "express-session": "^1.18.0",
        "graphql": "^16.8.1",
        "graphql-scalars": "^1.22.4",
        "graphql-yoga": "^5.1.1",
        "lru_map": "^0.4.1",
        "module-alias": "^2.2.3",
        "p-limit": "^3.1.0",
        "passport": "^0.7.0",
        "passport-local": "^1.0.0",
        "postgres": "^3.4.3",
        "postmark": "^4.0.2",
        "react-email": "2.0.0",
        "redis": "^4.6.13",
        "uuid": "^9.0.1",
        "wrangler": "^3.27.0",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@graphql-eslint/eslint-plugin": "^3.20.1",
        "@types/bull": "^4.10.0",
        "@types/connect-ensure-login": "^0.1.9",
        "@types/express": "^4.17.21",
        "@types/express-session": "^1.17.10",
        "@types/node": "^20.11.16",
        "@types/passport": "^1.0.16",
        "@types/passport-local": "^1.0.38",
        "@types/uuid": "^9.0.8",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "cross-env": "^7.0.3",
        "drizzle-dbml-generator": "^0.6.1",
        "drizzle-kit": "^0.20.14",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-prettier": "^5.1.3",
        "nodemon": "^3.0.3",
        "prettier": "^3.2.5",
        "sqlite": "^5.1.1",
        "sqlite3": "^5.1.7",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "tsc-alias": "^1.8.8",
        "tsx": "^4.7.0",
        "typescript": "^5.3.3"
    },
    "_moduleAliases": {
        "@": "dist/src"
    }
}
